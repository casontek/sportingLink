<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/teams_0100"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:paddingStart="13dp"
        android:paddingEnd="0dp"
        android:textColor="#CC000000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/league"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/teams_0100"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_time"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/league"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_tip"
        android:textColor="@color/blue"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/teams_0100"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_p_date_0100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/user_tip"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/date_time"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/view_status"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/pending"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>