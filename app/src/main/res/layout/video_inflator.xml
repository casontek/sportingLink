<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tm_cir"
        app:cardElevation="0dp"
        android:layout_alignParentTop="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/video_play"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"/>

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/play_button"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@id/tm_cir"
        android:background="@drawable/play_button2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video_title"
        android:gravity="left"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textColor="#E0000000"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/tm_cir"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video_date"
        android:gravity="right"
        android:text="27/06/2020"
        android:padding="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/lighter"
        android:layout_alignParentTop="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/browser_actions_bg_grey"
        android:layout_below="@id/video_title"/>

</RelativeLayout>